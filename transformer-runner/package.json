{
  "name": "transformer-runner",
  "version": "1.0.0",
  "description": "Main component of the Transformer Worker which gets tasks from Jellyfish and executes them",
  "scripts": {
    "start": "node build/index.js",
    "clean": "rm -rf build",
    "build": "npm run clean && tsc --project tsconfig.json",
    "watch": "tsc --watch --project tsconfig.json",
    "livepush": "nodemon --watch src -e js,ts,json --exec node -r ts-node/register/transpile-only src/index.ts",
    "test": "jest --coverage --verbose",
    "lint-fix": "balena-lint --typescript --fix src tests"
  },
  "author": "Balena Ltd",
  "license": "UNLICENSED",
  "dependencies": {
    "@ahmadnassri/spawn-promise": "^1.2.0",
    "@balena/jellyfish-client-sdk": "^6.0.0",
    "@balena/jellyfish-jellyscript": "^4.9.53",
    "@balena/transformer-runtime": "^0.1.3",
    "@types/rewire": "^2.5.28",
    "dockerode": "^3.3.0",
    "fast-json-patch": "^3.0.0-1",
    "isomorphic-fetch": "^3.0.0",
    "lockfile": "^1.0.4",
    "lodash": "^4.17.21",
    "memory-streams": "^0.1.3",
    "node-rsa": "^1.1.1",
    "tar": "^6.1.6"
  },
  "devDependencies": {
    "@balena/jellyfish-types": "^1.2.2",
    "@balena/lint": "^6.1.1",
    "@types/dockerode": "^3.2.3",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/lockfile": "^1.0.1",
    "@types/node": "^14.14.45",
    "@types/node-rsa": "^1.1.0",
    "@types/rewire": "^2.5.28",
    "eslint": "^7.26.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "rewire": "^5.0.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  }
}
